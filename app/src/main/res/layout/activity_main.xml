<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fina"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/temp"
        android:padding="10dp"
        android:layout_below="@+id/fina"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />
    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/temp"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:onClick="clickseven"
        />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginTop="30dp"
        android:onClick="clickeight"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/eight"
        android:layout_alignBottom="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:layout_marginTop="30dp"
        android:onClick="clicknine"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/div"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/nine"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:onClick="clickdiv"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/four"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="clickfour"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/four"
        android:layout_alignBottom="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:layout_marginTop="30dp"
        android:onClick="clickfive"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_marginTop="30dp"
        android:onClick="clicksix"/>

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mul"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:onClick="clickmul"/>

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button10"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_below="@+id/four"
        android:layout_alignParentStart="true"
        android:onClick="clickOne"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button10"
        android:layout_alignBottom="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:layout_marginTop="30dp"
        android:onClick="clicktwo"/>


    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button17"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:layout_marginTop="30dp"
        android:onClick="clickthree"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_below="@+id/minus"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:onClick="clickplus"/>

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:onClick="clickpoint"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zer0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/point"
        android:layout_alignBottom="@+id/point"
        android:layout_toEndOf="@+id/point"
        android:layout_marginTop="30dp"
        android:onClick="clickzero"/>

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:onClick="clickminus" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toEndOf="@+id/button11"
        android:layout_marginTop="30dp"
        android:onClick="clickclear"/>

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="20sp"
        android:layout_below="@+id/point"
        android:layout_toEndOf="@+id/point"
        android:onClick="clickequal"/>



</RelativeLayout>
